<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true" >        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ri_edit_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ri_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ri_edit_title_hint"
            android:inputType="textNoSuggestions|textCapSentences" >
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ri_edit_description"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ri_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ri_edit_desc_hint"
            android:inputType="textNoSuggestions|textCapSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/ri_edit_address"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/ri_edit_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ri_edit_coutry_hint"
            android:ems="10"
            android:inputType="textNoSuggestions|textCapSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/ri_edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ri_edit_city_hint"
            android:ems="10"
            android:inputType="textNoSuggestions|textCapSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/street"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/ri_edit_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ri_edit_street_hint"
            android:inputType="textNoSuggestions|textCapSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postal_code"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/ri_edit_postal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ri_edit_postal_hint"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/ri_edit_autofill_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ri_edit_autoFillAddress" />
        
        <Button
            android:id="@+id/ri_edit_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ri_edit_save" />
    </LinearLayout>

</ScrollView><!-- From: file:/C:/Users/Aivarass/AndroidstudioProjects/Travelers%20diary/travelersDiary/src/main/res/layout/fragment_route_item_edit.xml -->